{
  "extends": "airbnb-base",
  "plugins": [
    "import",
    "mocha"
  ],
  "env": {
    "mocha": true
  },
  "globals": {
    "chai": "readable",
    "should": "readable"
  },
  "rules": {
    "max-len": [
      1,
      150,
      2
    ],
    "prefer-promise-reject-errors": 0,
    "mocha/no-mocha-arrows": "error",
    "no-console": 0,
    "semi": 1,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}